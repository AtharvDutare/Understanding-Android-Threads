<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Start Thread"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/startthread"
            android:textSize="24sp" android:layout_marginTop="77dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="86dp" app:layout_constraintBottom_toTopOf="@+id/stopThread"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Stop Thread"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/stopThread"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="215dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/threadCount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="129dp" app:layout_constraintTop_toBottomOf="@+id/stopThread"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>